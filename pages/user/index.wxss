/* pages/user/index.wxss */
page{
  background-color:#edece8 ;
}
.user_info_wrap{
  height: 45vh;
  background-color:var(--themeColor) ;
  position: relative;
}
.user_bg{
  height: 50vh;
  /* 高斯模糊 */
  filter: blur(10rpx);
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align:center;
}
.user_icon{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}
.user_name{
  color: aliceblue;
  margin-top: 40rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  border-radius: 10%;
  color: greenyellow;
  font-size: 40rpx;
  font-weight: 700;
  padding: 10rpx 20rpx;
}
.user_content{
  position: relative;
}
.user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.history_wrap{
  background-color: white;
  display: flex;
}
.history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his_num{
  color: var(--themeColor);
}
.orders_wrap{
  background-color: white;
  margin:20rpx 0;
}
.orders_title{
  font-size: 35rpx;
  padding: 20rpx;
  font-weight: 200;
  border-bottom: 1rpx solid #ccc;
}
.orders_content{
  display: flex;
  padding: 20rpx 0;
}
.orders_content navigator{
  flex: 1;
  text-align: center;
}
.iconfont{
  color: var(--themeColor);
  font-size: 40rpx;
  padding-bottom: 10rpx;
}
.address_wrap{
  padding: 20rpx;
  background-color: white;
}
.app_info_wrap{
  margin: 20rpx 0;
  background-color: white;
}
.app_info_item{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
}
.recommend_wrap{
  padding: 20rpx;
  background-color: white;
  margin-bottom: 30rpx;
}